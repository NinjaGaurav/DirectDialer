<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_margin="0dp"
    android:background="#ffe991"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <com.gauravbholla.dd.AutoCompleteContactTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:textStyle="bold"
        android:id="@+id/coolStuff"
        android:enabled="false"/>

    <Button

        android:id="@+id/call_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:onClick="phoneCall"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:text="Click  To  Call" />

    <EditText

        android:id="@+id/enter_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"

        android:layout_height="wrap_content"

        android:hint="Enter Name" />


    <Button

        android:id="@+id/call_button2"

        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"


        android:onClick="addAsContactAutomatic"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/white"
        android:text="Add  To  Contacts" />




    <EditText

        android:id="@+id/enter_message"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"

        android:layout_height="wrap_content"

        android:hint="Enter Message" />

    <Button

        android:id="@+id/call_button4"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="1dp"

        android:textStyle="bold"
        android:onClick="autoSMS"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:text="Send  SMS" />


    <Button

        android:id="@+id/call_button3"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"

        android:textStyle="bold"
        android:onClick="clear"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/white"
        android:text="Clear" />


</LinearLayout>